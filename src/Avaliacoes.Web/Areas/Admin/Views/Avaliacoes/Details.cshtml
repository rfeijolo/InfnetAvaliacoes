@model Avaliacoes.Domain.Avaliacao

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div>
    <h4>Avaliação</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Objetivo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Objetivo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataInicio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataInicio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DataFim)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataFim)
        </dd>

        <dt>
            Coordenador
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Coordenador.Nome)
        </dd>

        <dt>
            Modulos
        </dt>
            
        <dd>
            <ul>
                @foreach (var item in Model.Modulos)
                {
                    <li>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </li>
                }
            </ul>
        </dd>

        <dt>
            Questoes
        </dt>

        <dd>
            @foreach (var item in Model.Questoes)
            {
                <ul>
                    <li>
                        @Html.DisplayFor(modelItem => item.Texto)
                    </li>
                </ul>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Voltar para listagem", "Index")
</p>
