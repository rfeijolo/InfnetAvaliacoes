@model Avaliacoes.Domain.Curso

@{
    ViewBag.Title = "Detalhes";
}
@*TODO: Criar detalhamento exibindo turmas cadastradas e quantidade de aluno por turma, avaliações associadas a cada turma e os status das avaliações*@
<h2>Detalhamento</h2>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            Modulos
        </dt>
        
        <dd>
            <ul>
                @foreach (var item in Model.Blocos)
                {
